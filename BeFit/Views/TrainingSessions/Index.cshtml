@model IEnumerable<BeFit.Models.TrainingSession>

@{
    ViewData["Title"] = "Moje sesje treningowe";
}

<h1>Moje sesje treningowe</h1>

@if (User.Identity!.IsAuthenticated)
{
    <p>
        <a class="btn btn-primary" asp-action="Create">➕ Utwórz nową sesję treningową</a>
    </p>
}
else
{
    <div class="alert alert-info">
        Aby zarządzać swoimi sesjami treningowymi, zaloguj się.
    </div>
}

@if (!Model.Any())
{
    <p>Nie masz jeszcze żadnych sesji treningowych.</p>
}
else
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Początek</th>
                <th>Koniec</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.StartTime</td>
                    <td>@item.EndTime</td>
                    <td>
                        <a class="btn btn-sm btn-outline-secondary"
                           asp-action="Details" asp-route-id="@item.Id">Szczegóły</a>
                        <a class="btn btn-sm btn-outline-primary"
                           asp-action="Edit" asp-route-id="@item.Id">Edytuj</a>
                        <a class="btn btn-sm btn-outline-danger"
                           asp-action="Delete" asp-route-id="@item.Id">Usuń</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
