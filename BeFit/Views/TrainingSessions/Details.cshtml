@using BeFit.Models
@model BeFit.Models.TrainingSession

@{
    ViewData["Title"] = "Szczegóły sesji treningowej";
    var exercises = ViewBag.Exercises as IEnumerable<PerformedExercise> ?? Enumerable.Empty<PerformedExercise>();
}

<h1>Szczegóły sesji treningowej</h1>
<hr />

<dl class="row">
    <dt class="col-sm-2">Początek</dt>
    <dd class="col-sm-10">@Model.StartTime</dd>

    <dt class="col-sm-2">Koniec</dt>
    <dd class="col-sm-10">@Model.EndTime</dd>
</dl>

@if (User.Identity!.IsAuthenticated)
{
    <p>
        <a class="btn btn-success"
           asp-controller="PerformedExercises"
           asp-action="Create"
           asp-route-trainingSessionId="@Model.Id">
            ➕ Dodaj ćwiczenie do tej sesji
        </a>
    </p>
}

<hr />

<h3>Wykonane ćwiczenia w tej sesji</h3>

@if (!exercises.Any())
{
    <p>W tej sesji nie ma jeszcze żadnych zapisanych ćwiczeń.</p>
}
else
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Ćwiczenie</th>
                <th>Obciążenie [kg]</th>
                <th>Serie</th>
                <th>Powtórzenia w serii</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var ex in exercises)
            {
                <tr>
                    <td>@ex.ExerciseType?.Name</td>
                    <td>@ex.Weight</td>
                    <td>@ex.Sets</td>
                    <td>@ex.RepsPerSet</td>
                </tr>
            }
        </tbody>
    </table>
}

<p class="mt-3">
    <a class="btn btn-secondary" asp-action="Index">Powrót do listy</a>
    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model.Id">Edytuj</a>
</p>
