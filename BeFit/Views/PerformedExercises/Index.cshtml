@model IEnumerable<BeFit.Models.PerformedExercise>

@{
    ViewData["Title"] = "Moje wykonane ćwiczenia";
}

<h1>Moje wykonane ćwiczenia</h1>

@if (User.Identity!.IsAuthenticated)
{
    <p>
        <a class="btn btn-primary" asp-action="Create">➕ Dodaj ćwiczenie</a>
    </p>
}
else
{
    <div class="alert alert-info">
        Aby zarządzać swoimi ćwiczeniami, zaloguj się.
    </div>
}

@if (!Model.Any())
{
    <p>Nie masz jeszcze zapisanych ćwiczeń.</p>
}
else
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Ćwiczenie</th>
                <th>Sesja</th>
                <th>Ciężar</th>
                <th>Serie</th>
                <th>Powtórzeń w serii</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.ExerciseType?.Name</td>
                    <td>@item.TrainingSession?.StartTime</td>
                    <td>@item.Weight</td>
                    <td>@item.Sets</td>
                    <td>@item.RepsPerSet</td>
                    <td>
                        <a class="btn btn-sm btn-outline-secondary"
                           asp-action="Details" asp-route-id="@item.Id">Szczegóły</a>
                        <a class="btn btn-sm btn-outline-primary"
                           asp-action="Edit" asp-route-id="@item.Id">Edytuj</a>
                        <a class="btn btn-sm btn-outline-danger"
                           asp-action="Delete" asp-route-id="@item.Id">Usuń</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
