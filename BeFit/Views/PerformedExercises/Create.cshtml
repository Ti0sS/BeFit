@model BeFit.Models.PerformedExercise

@{
    ViewData["Title"] = "Dodaj ćwiczenie";
}

<h1>Dodaj wykonane ćwiczenie</h1>

<hr />

<div class="row">
    <div class="col-md-6">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="mb-3">
                <label asp-for="ExerciseTypeId" class="form-label"></label>
                <select asp-for="ExerciseTypeId"
                        class="form-select"
                        asp-items="@(ViewData["ExerciseTypeId"] as SelectList)">
                    <option value="">-- wybierz ćwiczenie --</option>
                </select>
                <span asp-validation-for="ExerciseTypeId" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="TrainingSessionId" class="form-label">Sesja treningowa</label>
                <select asp-for="TrainingSessionId"
                        class="form-select"
                        asp-items="@(ViewData["TrainingSessionId"] as SelectList)">
                    <option value="">-- wybierz sesję --</option>
                </select>
                <span asp-validation-for="TrainingSessionId" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Weight" class="form-label"></label>
                <input asp-for="Weight" class="form-control" />
                <span asp-validation-for="Weight" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Sets" class="form-label"></label>
                <input asp-for="Sets" class="form-control" />
                <span asp-validation-for="Sets" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="RepsPerSet" class="form-label"></label>
                <input asp-for="RepsPerSet" class="form-control" />
                <span asp-validation-for="RepsPerSet" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary">Zapisz</button>
            <a asp-action="Index" class="btn btn-secondary">Powrót do listy</a>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
